DirectoryIndex <%= geturl('vpu-library.html') %>
<FilesMatch "^(de|en|)$">
    FallbackResource <%= geturl('vpu-library.html') %>
</FilesMatch>

Header set Cache-Control "must-revalidate, max-age=60"

# Apache adds a "-gzip" suffix to the etag when it uses gzip but doesn't
# take that into account when receiving requests. Strip the -gzip part
# and change it to a weak etag because we use the same for gzip and identity
# responses now and they are not bit identical anymore.
# See https://bz.apache.org/bugzilla/show_bug.cgi?id=45023
Header edit "etag" '^"((.*)-gzip)"$' '"$2"'
Header edit "etag" '^(.*)$' 'W/$1'
