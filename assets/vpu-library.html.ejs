<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favicons -->
    <link rel="shortcut icon" type="image/x-icon" href="<%= geturl('local/vpu-library/favicon.ico') %>">
    <link rel="icon" type="image/svg+xml" href="<%= geturl('local/vpu-library/favicon.svg') %>" sizes="any">

    <!-- XXX: Disable adoptedStyleSheets so that lit-element doesn't use it and we can edit CSS in the Chrome dev tools -->
<% if (environment === "local") { -%>
    <script>
        delete Document.prototype.adoptedStyleSheets;
    </script>
<% } -%>

    <!-- PWA manfiest file -->
    <link rel="manifest" href="<%= geturl('vpu-library.manifest.json') %>">

    <!-- IE11 error handling -->
    <script nomodule src="<%= geturl('local/vpu-library/nomodule.js') %>"></script>

    <!-- Loading spinner -->
    <script type="module" src="<%= geturl('local/vpu-library/spinner.js') %>"></script>

    <!-- App bundles-->
    <script type="module" id="vpu-app-src" src="<%= geturl('vpu-library.js') %>"></script>

    <!-- Prevent Chrome/Edge from suggesting to translate the page -->
    <meta name="google" content="notranslate">

    <!-- Preload fonts -->
    <link rel="preload" href="<%= geturl('local/vpu-library/fonts/SourceSansPro-Light.otf.woff2') %>" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="<%= geturl('local/vpu-library/fonts/SourceSansPro-Regular.otf.woff2') %>" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="<%= geturl('local/vpu-library/fonts/SourceSansPro-Semibold.otf.woff2') %>" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="<%= geturl('local/vpu-library/fonts/SourceSansPro-Bold.otf.woff2') %>" as="font" type="font/woff2" crossorigin>

    <!-- Font related CSS -->
    <style>
        body {
            font-family: 'Source Sans Pro', 'Calibri', 'Arial', 'sans-serif';
            font-weight: 300;
            margin: 0;
        }

        @font-face {
            font-family: 'Source Sans Pro';
            font-weight: 300;
            src: url('<%= geturl('local/vpu-library/fonts/SourceSansPro-Light.otf.woff2') %>') format('woff2');
            font-display: block;
        }

        @font-face {
            font-family: 'Source Sans Pro';
            font-weight: 400;
            src: url('<%= geturl('local/vpu-library/fonts/SourceSansPro-Regular.otf.woff2') %>') format('woff2');
            font-display: block;
        }

        @font-face {
            font-family: 'Source Sans Pro';
            font-weight: 600;
            src: url('<%= geturl('local/vpu-library/fonts/SourceSansPro-Semibold.otf.woff2') %>') format('woff2');
            font-display: block;
        }

        @font-face {
            font-family: 'Source Sans Pro';
            font-weight: 700;
            src: url('<%= geturl('local/vpu-library/fonts/SourceSansPro-Bold.otf.woff2') %>') format('woff2');
            font-display: block;
        }

        /* TU-Graz style override */
        html {
            --vpu-override-info-bg-color: #245b78;
            --vpu-override-danger-bg-color: #e4154b;
            --vpu-override-warning-bg-color: #ffe183;
            --vpu-override-warning-text-color: black;
            --vpu-override-success-bg-color: #259207;
        }
    </style>

    <!-- Preloading/Preconnecting -->
    <link rel="preconnect" href="<%= entryPointURL %>">
    <link rel="preconnect" href="<%= keyCloakBaseURL %>">
</head>

<body>
<vpu-app lang="de" src="<%= geturl('vpu-library.topic.metadata.json') %>" entry-point-url="<%= entryPointURL %>" base-path="<%= geturl('') %>"><vpu-spinner></vpu-spinner></vpu-app>
</body>
</html>